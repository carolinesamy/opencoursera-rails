<!DOCTYPE html>
<html>
<head>
  <title>Yarab</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
<body>

<nav class="navbar navbar-inverse" >
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a style="text-decoration: none" class="navbar-brand" href="/">Open Coresra</a>
    </div>
    <div class="collapse navbar-collapse" id="myNavbar">
      <% if current_user %>
          <a style="text-decoration: none" class="navbar-brand" href="/">Courses</a>

    <% end %>
      <ul class="nav navbar-nav navbar-right">
        <li>
          <% if current_user %>
              <li><a style="color: #1abc9c;text-decoration: none"> Welcome <%= current_user.name %></a></li>
              <li><image src="<%=current_user.image%>" class="img-circle" style="width:50px; height:50px" ></image></li>
          <% end %>
        </li>
        <li><!--<a href="#"><span class="glyphicon glyphicon-log-in"></span> Login</a>-->
          <% if  current_user  %>
              <%= link_to "sign Out",  destroy_user_session_path,method: :delete%>
          <% else %>
              <%= link_to "Log in",  new_user_session_path %>
          <%  end %>
        </li>

      </ul>

    </div>
  </div>
</nav>

<%= yield %>

</body>
</html>
