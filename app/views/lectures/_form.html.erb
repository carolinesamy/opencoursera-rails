<head>
  <style>
    .bg-1 {
      background-color: #1abc9c;
      /*color: #e65c00;*/
    }
  </style>

</head>

<div class="bg-1">
  <div class="container text-center">
    <%= form_for(@lecture) do |f| %>
        <% if @lecture.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@lecture.errors.count, "error") %> prohibited this lecture from being saved:</h2>

              <ul>
                <% @lecture.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <div class="field">
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </div>
        <div class="field" align="center">
          <%= f.label :attach %><br>
          <%= f.file_field :attach %>
        </div>
        <div class="field">
          <%= f.label :content %><br>
          <%= f.cktext_area :content %>
        </div>

        <div class="field" >
          <%= f.label :course_id %><br>
          <%= f.collection_select :course_id, current_user.courses,:id,:title, include_blank: true %>

        </div>
        <div class="actions">
          <%= f.submit %>
        </div>
    <% end %>


  </div>
</div>